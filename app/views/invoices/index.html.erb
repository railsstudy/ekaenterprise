<h1>Listing invoices</h1>
<table class="table table-striped table-bordered table-responsive">
     <tr>
      <th class="center">Date</th>
      <th class="center">Company</th>
      <th class="center">Tax</th>
      <th class="center">Salesperson</th>
      <th colspan="3"></th>
    </tr>
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.date.strftime("%Y/%m/%d") %></td>
        <td><%= invoice.company %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.salesperson %></td>
        <td>
          <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                   Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Show", invoice, class: "btn btn-link" %></li>
                <li><%= link_to "Edit", edit_invoice_path(invoice), class: "btn btn-link" %></li>
                <li><%= link_to "Destroy", invoice, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
              </ul>
          <div>
       </td>
    </tr>  
  <% end %>
</table>

<%= link_to 'New Invoice', new_invoice_path %>
